# ===========================
# CONFIGURATION BACKEND O'RUBRI
# ===========================

PORT=3000

# ===========================
# MAILJET EMAIL CONFIGURATION
# ===========================
# Clés API Mailjet (https://app.mailjet.com/account/api_keys)
MJ_APIKEY_PUBLIC=votre_clé_publique_mailjet
MJ_APIKEY_PRIVATE=votre_clé_privée_mailjet

# Adresses email
EMAIL_FROM=noreply@orubri.fr
EMAIL_TO=contact@orubri.fr

# ===========================
# FRONTEND CONFIGURATION
# ===========================
FRONTEND_URL=http://localhost:5173
# 1. Activer 2FA sur le compte Gmail
# 2. Créer une App Password: https://myaccount.google.com/apppasswords
EMAIL_USER=votre-email@gmail.com
EMAIL_PASS=votre-app-password-16-caracteres

# ===========================
# FRONTEND
# ===========================
# URL du frontend pour les emails et CORS
# DEV: http://localhost:5173
# PROD: https://o-rubri-frontend.onrender.com
FRONTEND_URL=http://localhost:5173

# ===========================
# ENVIRONNEMENT
# ===========================
NODE_ENV=development
